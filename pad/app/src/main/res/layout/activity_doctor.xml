<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background">

  <RelativeLayout
    android:layout_alignTop="@+id/relativeLayout"
    android:layout_alignParentStart="true"
    android:layout_marginStart="100px"
    android:layout_width="365px"
    android:layout_height="595px"

    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="34px"
        android:layout_height="34px"
        android:layout_marginLeft="198px"
        android:layout_marginTop="306px"
        android:src="@drawable/gender" />

    <TextView
        android:id="@+id/doctor_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="198px"
        android:layout_marginTop="306px"
        android:paddingLeft="50px"
        android:text=""
        android:textColor="@color/brownLight"
        android:textSize="30px" />

    <TextView
      android:id="@+id/textString_case"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="21px"
      android:layout_marginLeft="22px"
      android:layout_alignParentLeft="false"
      android:text="医生信息"
      android:textColor="@color/white"
      android:textSize="30px" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60px"
      android:layout_marginLeft="22px"
      android:text="DOCTOR INFORMATION"
      android:textColor="@color/whiteGray"
      android:textSize="18px" />
    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/head"
      android:layout_width="164px"
      android:layout_height="164px"
      android:layout_marginTop="113px"
      android:layout_marginLeft="93px"
      android:src="@color/colorPrimary" />

    <ImageView
      android:layout_width="34px"
      android:layout_height="34px"
      android:layout_marginTop="306px"
      android:layout_marginLeft="22px"
      android:src="@drawable/person" />
    <TextView
      android:id="@+id/doctor_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="306px"
      android:layout_marginLeft="22px"
      android:paddingLeft="50px"
      android:text=""
      android:textColor="@color/brownLight"
      android:textSize="30px" />
    <!--</LinearLayout>-->

    <ImageView
        android:id="@+id/doctor_call_image"
      android:layout_width="34px"
      android:layout_height="34px"
      android:layout_marginTop="350px"
      android:layout_marginLeft="198px"
      android:src="@drawable/call"
        android:visibility="gone"/>
    <TextView
      android:id="@+id/doctor_call_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="350px"
      android:layout_marginLeft="198px"
      android:paddingLeft="50px"
      android:text=""
      android:textColor="@color/brownLight"
      android:textSize="30px"
        android:visibility="gone"/>

    <ImageView
      android:layout_width="34px"
      android:layout_height="34px"
      android:layout_marginTop="350px"
      android:layout_marginLeft="22px"
      android:src="@drawable/age" />
    <TextView
      android:id="@+id/doctor_age"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="350px"
      android:layout_marginLeft="22px"
      android:paddingLeft="50px"

      android:textColor="@color/brownLight"
      android:textSize="30px" />


    <!--<ImageView-->
      <!--android:layout_width="34px"-->
      <!--android:layout_height="34px"-->
      <!--android:layout_marginTop="394px"-->
      <!--android:layout_marginLeft="22px"-->
      <!--android:src="@drawable/doctor" />-->
    <!--<TextView-->
      <!--android:id="@+id/doctor_talent"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_marginTop="394px"-->
      <!--android:layout_marginLeft="22px"-->
      <!--android:paddingLeft="50px"-->
      <!--android:text=""-->
      <!--android:textColor="@color/brownLight"-->
      <!--android:textSize="30px" />-->

    <LinearLayout
      android:layout_width="294px"
      android:layout_height="108px"
      android:layout_marginTop="436px"
      android:layout_marginLeft="22px"
      android:background="@drawable/round_background"
      android:orientation="vertical">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="22px"
        android:text="医生职称："
        android:textSize="18px" />
      <TextView
        android:id="@+id/job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22px"
        android:textSize="18px" />
    </LinearLayout>
  </RelativeLayout>
  <Button
    android:layout_marginLeft="1152px"
    android:layout_marginTop="30px"
    android:background="@drawable/btn_return"
    android:id="@+id/return_btn"
    android:layout_width="88px"
    android:layout_height="88px"
    />
  <RelativeLayout
    android:layout_marginLeft="500px"
    android:layout_marginTop="75px"
    android:layout_width="600px"
    android:layout_height="290px"
    android:background="@drawable/detail_bg"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:id="@+id/relativeLayout">

    <TextView
      android:textColor="#ffffff"
      android:textSize="30px"
      android:layout_marginLeft="22px"
      android:layout_marginTop="21px"
      android:text="医生简介"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:textColor="#facdc2"
      android:textSize="18px"

      android:layout_marginLeft="22px"
      android:layout_marginTop="60px"
      android:text="DOCTOR SUMMARY"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <LinearLayout
      android:layout_marginLeft="26px"
      android:layout_marginTop="100px"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:textSize="24px"
      android:textColor="#d57457"
      >
      <LinearLayout
        android:layout_marginTop="10px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:textSize="24px"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="所在医院："/>
        <TextView
          android:textSize="24px"
          android:id="@+id/hospital"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
        android:layout_marginTop="10px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:textSize="24px"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="联系邮件："/>
        <TextView
          android:textSize="24px"
          android:id="@+id/email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
        android:layout_marginTop="10px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
          android:textSize="24px"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="擅长方向:"/>
        <TextView
          android:textSize="24px"
          android:id="@+id/talent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      </LinearLayout>
    </LinearLayout>

  </RelativeLayout>

  <RelativeLayout
    android:layout_marginLeft="500px"
    android:layout_marginTop="300px"
    android:layout_width="600px"
    android:layout_height="290px"
    android:background="@drawable/detail_bg"
    android:layout_alignTop="@+id/relativeLayout"
    android:layout_alignParentStart="true">
    <TextView
      android:layout_marginLeft="22px"
      android:layout_marginTop="21px"
      android:textColor="#ffffff"
      android:textSize="30px"
      android:text="医生介绍"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:layout_marginLeft="22px"
      android:layout_marginTop="60px"
      android:textColor="#facdc2"
      android:textSize="18px"
      android:text="DOCTOR INTRODUCTION"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
      android:layout_marginLeft="26px"
      android:layout_marginTop="100px"
      android:textSize="24px"
      android:textColor="#d57457"
      android:text=""
      android:id="@+id/introduction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </RelativeLayout>

</RelativeLayout>