<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background">
  <include
    layout="@layout/item_case"
    android:layout_width="365px"
    android:layout_height="595px"

    android:layout_alignTop="@+id/relativeLayout"
    android:layout_alignParentStart="true"
    android:layout_marginStart="100px" />
  <Button
    android:layout_marginLeft="1152px"
    android:layout_marginTop="30px"
    android:background="@drawable/btn_return"
    android:id="@+id/return_btn"
    android:layout_width="88px"
    android:layout_height="88px"
    />
  <RelativeLayout
    android:layout_marginLeft="500px"
    android:layout_marginTop="75px"
    android:layout_width="600px"
    android:layout_height="290px"
    android:background="@drawable/detail_bg"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:id="@+id/relativeLayout">

    <TextView
      android:textColor="#ffffff"
      android:textSize="30px"
      android:layout_marginLeft="22px"
      android:layout_marginTop="21px"
      android:text="病例详细"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:textColor="#facdc2"
      android:textSize="18px"

      android:layout_marginLeft="22px"
      android:layout_marginTop="60px"
      android:text="DETAILS OFF ILLNESS"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
      android:layout_marginLeft="22px"
      android:layout_marginTop="100px"
      android:textSize="24px"
      android:textColor="#d57457"
      android:text="  这是一段病情详细"
      android:id="@+id/detail_of_illness"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </RelativeLayout>

  <RelativeLayout
    android:layout_marginLeft="500px"
    android:layout_marginTop="300px"
    android:layout_width="600px"
    android:layout_height="290px"
    android:background="@drawable/detail_bg"
    android:layout_alignTop="@+id/relativeLayout"
    android:layout_alignParentStart="true">
    <TextView
      android:layout_marginLeft="22px"
      android:layout_marginTop="21px"
      android:textColor="#ffffff"
      android:textSize="30px"
      android:text="诊断结果"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:layout_marginLeft="22px"
      android:layout_marginTop="60px"
      android:textColor="#facdc2"
      android:textSize="18px"
      android:text="DIAGNOSIS RESULT"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
      android:layout_marginLeft="22px"
      android:layout_marginTop="100px"
      android:textSize="24px"
      android:textColor="#d57457"
      android:text="  这是一段诊断结果"
      android:id="@+id/diagnosis_result"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </RelativeLayout>
  
</RelativeLayout>