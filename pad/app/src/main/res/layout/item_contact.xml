<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="1050px"
  android:layout_height="98px"

  android:background="@color/pinkWhite">
  <View
    android:layout_width="wrap_content"
    android:layout_height="1px"
    android:background="#FFCFB9AA"
    />
  <LinearLayout
    android:layout_width="1050px"
    android:layout_height="98px"
    android:orientation="horizontal"
    >

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/head"
      android:layout_gravity="center_vertical"
      android:layout_marginTop="13px"
      android:layout_marginBottom="13px"
      android:layout_width="72px"
      android:layout_height="72px" />
    <LinearLayout
      android:layout_marginLeft="18px"
      android:layout_width="960px"
      android:layout_height="98px"
      android:orientation="vertical"
      >

      <TextView
        android:text="王医生"
        android:id="@+id/name"
        android:textColor="#7d5951"
        android:textSize="30px"
        android:layout_marginTop="21px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        >
        <TextView
          android:id="@+id/number_xiaoyu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="18px"
          android:layout_below="@+id/title"
          android:layout_toRightOf="@id/icon"
          android:paddingRight="40px"
          android:layout_alignParentBottom="true"
          android:textColor="#bca699"
          android:textSize="24px" />
        <TextView
          android:id="@+id/number_phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/title"
          android:layout_toRightOf="@id/number_xiaoyu"
          android:layout_alignParentBottom="true"
          android:textColor="#bca699"
          android:textSize="24px" />
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  <View
    android:layout_width="wrap_content"
    android:layout_height="1px"
    android:background="#FFCFB9AA"
    />
</LinearLayout>