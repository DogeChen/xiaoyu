<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent"

  >
  <RelativeLayout
    android:id="@+id/temperature"
    android:layout_width="409px"
    android:layout_height="539px"
    android:background="@color/white">
    <com.ainemo.pad.Jujia.drawSmoothLine.BesselChart
      android:id="@+id/shidu_line_chart"
      android:layout_width="match_parent"
      android:layout_height="300px"
      app:verticalAxisPosition="right"
      />
    <TextView
      android:layout_marginLeft="26px"
      android:layout_marginTop="330px"
      android:id="@+id/day"
      android:textSize="30px"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView

      android:id="@+id/date"
      android:textSize="24px"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <LinearLayout
      android:layout_width="172px"
      android:layout_height="114px"
      android:background="@color/gray2"
      android:layout_marginLeft="26px"
      android:layout_marginBottom="58px"
      android:layout_alignParentBottom="true"
      android:orientation="vertical">
      <TextView
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高温度"
        android:textColor="@color/grayBrown"
        android:textSize="18px"
        android:layout_gravity="center_horizontal" />
      <TextView
        android:id="@+id/maxTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/grayBrown"
        android:textSize="36px"
        android:hint="--℃"
        />

    </LinearLayout>
    <LinearLayout
      android:layout_alignParentEnd="true"
      android:layout_marginRight="26px"
      android:layout_marginBottom="58px"
      android:layout_width="172px"
      android:layout_height="114px"
      android:layout_alignParentBottom="true"
      android:background="@color/gray2"
      android:orientation="vertical">

      <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最低温度"
        android:textColor="@color/grayBrown"
        android:textSize="18px" />
      <TextView
        android:id="@+id/minTem"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayBrown"
        android:textSize="36px"
        android:hint="--℃"/>
    </LinearLayout>

  </RelativeLayout>
</LinearLayout>