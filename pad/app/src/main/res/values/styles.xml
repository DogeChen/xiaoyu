<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Theme.Call.Table" parent="Base.TextAppearance.AppCompat.Button">
    <item name="android:background">@color/transparent</item>
    <item name="android:textColor">#d7e6bb</item>

    <item name="android:textSize">40px</item>
  </style>

  <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">30px</item>
  </style>

  <style name="MyCardView" parent="CardView">
    <item name="android:paddingTop">0px</item>
  </style>

</resources>
